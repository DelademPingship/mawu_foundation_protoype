# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mawu_foundation

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# Get webhook secret from: https://dashboard.stripe.com/test/webhooks
# After creating webhook endpoint at: /api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (Gmail SMTP)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_PASS=your-app-specific-password
TEST_EMAIL=your-test-email@example.com

# Admin User (for initial setup)
ADMIN_EMAIL=admin@mawufoundation.org
ADMIN_PASSWORD=changeme
ADMIN_NAME=Admin User

# Session Security
SESSION_SECRET=your-secret-key-change-in-production

# API Configuration
# VITE_API_URL - Base URL for backend API (defaults to http://localhost:3001 if not set)
# Development: http://localhost:3001 (or your custom port)
# Production: https://api.mawufoundation.org (or your production API URL)
VITE_API_URL=http://localhost:3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Optional analytics configuration
# VITE_ANALYTICS_DOMAIN=demo.mawufoundation.org
